{
  "ava": {
    "failFast": false,
    "files": [
      "dist/tests/**/*.js"
    ],
    "timeout": "1m"
  },
  "description": "Check responsiveness",
  "devDependencies": {
    "@hint/utils-tests-helpers": "^1.0.0",
    "@types/debug": "0.0.31",
    "@types/node": "10.9.1",
    "hint": "^4.1.0",
    "ava": "^0.25.0",
    "cpx": "^1.5.0",
    "eslint": "^5.11.1",
    "eslint-plugin-markdown": "^1.0.0-rc.0",
    "eslint-plugin-typescript": "0.14.0",
    "markdownlint-cli": "^0.13.0",
    "npm-link-check": "^2.0.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^13.1.0",
    "rimraf": "^2.6.2",
    "typescript": "^3.2.2",
    "typescript-eslint-parser": "21.0.2"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "files": [
    "dist/src"
  ],
  "homepage": "",
  "keywords": [
    "hint",
    "hint",
    "responsive",
    "responsive-hint"
  ],
  "license": "Apache-2.0",
  "main": "dist/src/index.js",
  "name": "@hint/hint-responsive",
  "nyc": {
    "branches": 85,
    "cache": true,
    "check-coverage": true,
    "functions": 80,
    "instrument": true,
    "lines": 85,
    "reporter": [
      "lcov",
      "text"
    ],
    "sourceMap": true,
    "statements": 85
  },
  "peerDependencies": {
    "hint": "^4.1.2"
  },
  "private": true,
  "repository": "",
  "scripts": {
    "build": "npm run clean && npm-run-all build:*",
    "build-release": "npm run clean && npm run build:assets && tsc --inlineSourceMap false --removeComments true",
    "build:assets": "cpx \"./{src,tests}/**/{!(*.ts),.!(ts)}\" dist",
    "build:ts": "tsc -b",
    "clean": "rimraf dist",
    "lint": "npm-run-all lint:*",
    "lint:js": "eslint . --cache --ext js --ext md --ext ts --report-unused-disable-directives",
    "lint:md": "markdownlint --ignore CHANGELOG.md *.md",
    "test": "npm run lint && npm run build && npm run test-only",
    "test-only": "nyc ava",
    "init": "npm install && npm run build",
    "watch": "npm run build && npm-run-all --parallel -c watch:*",
    "watch:assets": "npm run build:assets -- -w --no-initial",
    "watch:test": "ava --watch",
    "watch:ts": "npm run build:ts -- --watch"
  },
  "version": "1.0.0",
  "dependencies": {
    "@hint/parser-css": "^2.0.3",
    "hint": "^4.1.0",
    "npm": "^6.5.0"
  }
}
